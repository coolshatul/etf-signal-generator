{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "typeRoots": [
            "lambda/types",
            "node_modules/@types"
        ],
        "types": [
            "node",
            "aws-lambda"
        ]
    },
    "include": [
        "lambda/**/*.ts",
        "cdk/**/*.ts"
    ]
}